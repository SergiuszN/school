{% extends 'base.admin.html.twig' %}

{% block body %}
    {% include 'components/admin_alerts.html.twig' %}

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">{{ 'admin.testimonial.list.header'|trans }}</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="table" style="width: 100%">
                    <thead>
                    <tr>
                        <th>{{ 'admin.testimonial.list.table.name'|trans }}</th>
                        <th>{{ 'admin.testimonial.list.table.date'|trans }}</th>
                        <th>{{ 'admin.testimonial.list.table.content'|trans }}</th>
                        <th>{{ 'admin.testimonial.list.table.rating'|trans }}</th>
                        <th>{{ 'admin.testimonial.list.table.isActive'|trans }}</th>
                        <th>{{ 'admin.testimonial.list.table.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for testimonial in testimonials %}
                        <tr>
                            <td>{{ testimonial.name }}</td>
                            <td>{{ testimonial.created|date('d-m-Y') }}</td>
                            <td>{{ testimonial.content }}</td>
                            <td>{{ testimonial.rating }}</td>
                            <td>
                                <a href="{{ path('admin_testimonial_toggle', {'testimonial': testimonial.id}) }}" style="cursor: pointer;">
                                    {% if testimonial.isActive %}
                                        <i class="fa fa-check-circle text-success"></i>
                                    {% else %}
                                        <i class="fa fa-circle text-danger"></i>
                                    {% endif %}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin_testimonial_remove', {'testimonial': testimonial.id}) }}"
                                   onclick="return confirm('{{ 'admin.testimonial.list.confirm.remove'|trans }}')">
                                    <i class="fa fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}