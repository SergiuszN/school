{% extends 'base.admin.html.twig' %}

{% block body %}
    {% include 'components/admin_alerts.html.twig' %}

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Статті</h4>
            <a href="{{ path('admin_blog_post_create') }}" class="btn btn-success btn-sm shadow-sm">Створити</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="table" style="width: 100%">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Назва</th>
                        <th>Створено</th>
                        <th>Акції</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for post in posts %}
                        <tr>
                            <td>{{ post.id }}</td>
                            <td>{{ post.name }}</td>
                            <td>{{ post.created|date('d-m-Y') }}</td>
                            <td>
                                <a href="{{ path('admin_blog_post_edit', {'post': post.id}) }}"><i class="fa fas fa-pencil-alt"></i></a>
                                <a href="{{ path('admin_blog_post_remove', {'post': post.id}) }}" onclick="return confirm('{{ 'admin.blog.post.list.confirm.remove'|trans }}')">
                                    <i class="fa fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}