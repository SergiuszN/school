{% extends 'base.admin.html.twig' %}

{% block body %}
    {% include 'components/admin_alerts.html.twig' %}

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">Події</h4>
            <a href="{{ path('admin_event_create') }}" class="btn btn-success btn-sm shadow-sm">Створити</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="table" style="width: 100%">
                    <thead>
                    <tr>
                        <th>Назва</th>
                        <th>Час</th>
                        <th>Ціна</th>
                        <th>Акції</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for event in events %}
                    <tr>
                        <td>{{ event.name }}</td>
                        <td>{{ event.date|date('d-m-Y') }}</td>
                        <td>{{ event.price }}</td>
                        <td>
                            <a href="{{ path('admin_event_edit', {'event': event.id}) }}"><i class="fa fas fa-pencil-alt"></i></a>
                            <a href="{{ path('admin_event_remove', {'event': event.id}) }}" onclick="return confirm('{{ 'admin.event.list.confirm.remove'|trans }}')"><i class="fa fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}