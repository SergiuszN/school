{% extends 'base.admin.html.twig' %}

{% block body %}
    {% include 'components/admin_alerts.html.twig' %}

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h4 class="m-0 font-weight-bold text-primary">
                {{ 'admin.blog.category.list.header'|trans }}
            </h4>
            <a href="{{ path('admin_blog_category_create') }}" class="btn btn-success btn-sm shadow-sm">
                {{ 'admin.blog.category.list.create'|trans }}
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="table" style="width: 100%">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>{{ 'admin.blog.category.list.th.name'|trans }}</th>
                        <th>{{ 'admin.blog.category.list.th.isVisible'|trans }}</th>
                        <th>{{ 'admin.blog.category.list.th.actions'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td>{{ category.id }}</td>
                            <td>{{ category.name }}</td>
                            <td>
                                <a href="{{ path('admin_blog_category_toggle', {'category': category.id}) }}" style="cursor: pointer;">
                                    {% if category.isActive %}
                                        <i class="fa fa-check-circle text-success"></i>
                                    {% else %}
                                        <i class="fa fa-circle text-danger"></i>
                                    {% endif %}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('admin_blog_category_edit', {'category': category.id}) }}"><i class="fa fas fa-pencil-alt"></i></a>
                                <a href="{{ path('admin_blog_category_remove', {'category': category.id}) }}" onclick="return confirm('{{ 'admin.blog.category.list.confirm.remove'|trans }}')">
                                    <i class="fa fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}